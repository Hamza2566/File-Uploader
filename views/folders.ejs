<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Cal+Sans&family=Exo+2:ital,wght@0,100..900;1,100..900&family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Poetsen+One&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
    <title>🗂️ </title>
  </head>
  <body>
     <%- include('partials/header') %>
     <% if(currentuser && currentuser.username){%>
      <h2 class="welcome"> 👋 Welcome back, <%= currentuser.username%></h2>
   <%  }%>

   <div class="folders-content">
    <div class="folder-nav">

      <div class="folders-header">
         <div class="add-folders">
          <input type="submit" value="📂 New Folder" class="open-modal-btn">
          <div class="modal" id="newFolderModal">
          <div class="modal-content">
          <span class="close">&times;</span>
         <h2>Create New Folder</h2>
         <form action="/folders" method="POST">
          <label for="Name">Name</label>
      <input type="text" name="folderName" placeholder="Folder name" class="model-input" required>
      <button type="submit" class="model-button">Create</button>
    </form>
  </div>
         </div>
         
      </div>
    </div>
    <div class="folders-items">
      <% if (folders && folders.length > 0){%>
         <% folders.forEach(element => {%>
          <!-- <input type="button" value=" <%= element.name%>" class="folder-item"> -->
          <form action="/folder/files" method="POST" class="folder-form">
        <input type="hidden" name="folderId" value="<%= element.id %>">
        <button type="submit" class="folder-item"> <%= element.name %></button>
      </form>
         <% });%>
    <%  }%>
    </div>
   
   </div>
    <div class="folder-content">
      <% if(files && files.length > 0){ %>
  <%- include('partials/files', { files: files }) %>
<% } else { %>
  <%- include('partials/files') %>
<% } %>

    </div>
  </body>

  <script src="/js/helper.js"></script>
</html>
